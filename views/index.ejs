<!DOCTYPE html>
<html>

<head>
	<title><%= title %></title>
	<meta charset="utf-8">
	<link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
	<!-- Title -->
	<h1><%= title %></h1>

	<!-- Navigation Bar -->
	<div id="nav">
		<ul>
		  <li><a href="./">Comments</a></li>
		  <li><a href="/users">Information</a></li>	  
		</ul>
	</div>

	<!-- Comment Insert Form -->
	<form method="post" action="/addComment">
		<input name="insertform" type="text" id="input">
		<input type="submit" value="쓰기" id="submit">
	</form>

	<!-- Comment List -->
	<div id="comments">
		<ul>
			<% for (var user of userData) { %>
				<li>
					<%= user.CONTENT %>
				</li>
			<% } %>
		</ul>
	</div>

	<!-- required for hot reload -->
	<script src="/reload/reload.js"></script>	
</body>

</html>